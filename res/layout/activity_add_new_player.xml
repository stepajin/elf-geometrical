<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space"
    tools:context=".AddNewPlayer" >
    
    
    
    
    
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">
        
         <RelativeLayout
       		android:id="@+id/relativeLayout10"
        	android:gravity="center_vertical"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerHorizontal="true"
        	android:layout_alignParentTop="true"
        	android:layout_marginTop="15dp">
        	<RelativeLayout
            	android:id="@+id/relativeLayout11"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_centerHorizontal="true"
        		>
        
       			<TextView
        			android:id="@+id/zadatjmeno"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_centerHorizontal="true"
       	 			android:text="@string/zadatjmeno"
      	  			android:textColor="@android:color/white"
       	 			android:textSize="20dp" />
        	</RelativeLayout>
        
        	<RelativeLayout
            	android:id="@+id/relativeLayout12"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_centerHorizontal="true"
        		android:layout_below="@+id/relativeLayout11">
        
     	  	 <EditText
        			android:id="@+id/nameNewPlayer"
        			android:layout_width="300dp"
        			android:layout_height="wrap_content"
        			android:layout_centerHorizontal="true"
        			android:textColor="@android:color/black"
        			android:textSize="20sp" 
        		/>
        	</RelativeLayout>
        </RelativeLayout>
        
        <RelativeLayout
       		android:id="@+id/relativeLayout20"
        	android:gravity="center_vertical"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_centerHorizontal="true"
        	android:layout_below="@+id/relativeLayout10"
        	>
        	<RelativeLayout
        		android:id="@+id/relativeLayout21"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_centerHorizontal="true"
        	>
		            <RelativeLayout
		        		android:id="@+id/relativeLayout22"
		        		android:layout_width="270dp"
		        		android:layout_height="150dp"
		        		>
				
		       			<TextView
		        			android:id="@+id/vyberteobrazek"
		        			android:layout_width="wrap_content"
		        			android:layout_height="wrap_content"
		        			android:text="@string/vyberteobrazek"
		        			android:textColor="@android:color/white"
		        			android:textSize="20dp" 
		        			android:layout_centerHorizontal="true"/>
		       		
		       			<Gallery
            				android:id="@+id/gallery1"
            				android:layout_width="match_parent"
            				android:layout_height="match_parent"
            				android:layout_below="@+id/vyberteobrazek"/>
		        	</RelativeLayout>
		            
		            <RelativeLayout
			        	android:id="@+id/relativeLayout23"
		        		android:layout_width="wrap_content"
		        		android:layout_height="150dp"
		        		android:layout_toRightOf="@+id/relativeLayout22"
		        	>
		
		        		<TextView
			            	android:id="@+id/vybranbrazek"
			            	android:layout_width="wrap_content"
			        		android:layout_height="wrap_content"
			        		android:text="@string/vybranbrazek"
			        		android:textColor="@android:color/white"
			        		android:textSize="20dp"
			        		android:layout_centerHorizontal="true"
		        		 />
		        
		        		<ImageView
            				android:id="@+id/imageView1"
            				android:layout_width="wrap_content"
            				android:layout_height="match_parent"
            				android:src="@drawable/pskritek" 
            				android:layout_below="@+id/vybranbrazek"/>
		    	</RelativeLayout>
            
        	</RelativeLayout>
        	<RelativeLayout
        		android:id="@+id/relativeLayout30"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_centerHorizontal="true"
        		android:layout_below="@+id/relativeLayout21"
        		android:paddingTop="20dp"
        	>
	        	<Button
	        		android:id="@+id/vytvoritnovehohrace"
	        		
	        		android:layout_width="match_parent"
	        		android:layout_height="wrap_content"
	        		android:text="@string/vytvoritnovehohrace" 
	        		/>
        	</RelativeLayout>
        </RelativeLayout>
        
       
    </RelativeLayout>
    

    

    

    
    
    

</RelativeLayout>